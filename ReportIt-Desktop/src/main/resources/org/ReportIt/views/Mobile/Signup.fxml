<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="750.0" maxWidth="768.0" minHeight="750.0" minWidth="320.0" prefHeight="750.0" prefWidth="425.0" stylesheets="@../../stylish/style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.ReportIt.Controllers.Desktop.LoginController">
   <center>
      <VBox alignment="CENTER" fillWidth="false" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="233.0" fitWidth="227.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/logo_transparent.png" />
               </image>
            </ImageView>
            <VBox prefHeight="200.0" prefWidth="326.0" spacing="20.0">
               <children>
                  <TextField prefHeight="48.0" prefWidth="267.0" promptText="Full name" styleClass="input-field" stylesheets="@../../stylish/style.css">
                     <font>
                        <Font name="Segoe UI" size="22.0" />
                     </font>
                  </TextField>
                  <TextField prefHeight="48.0" prefWidth="267.0" promptText="Username" styleClass="input-field" stylesheets="@../../stylish/style.css">
                     <font>
                        <Font name="Segoe UI" size="22.0" />
                     </font>
                  </TextField>
                  <TextField prefHeight="48.0" prefWidth="267.0" promptText="E-mail" styleClass="input-field" stylesheets="@../../stylish/style.css">
                     <font>
                        <Font name="Segoe UI" size="22.0" />
                     </font>
                  </TextField>
                  <PasswordField prefHeight="48.0" prefWidth="267.0" promptText="Password" styleClass="input-field" stylesheets="@../../stylish/style.css">
                     <font>
                        <Font name="Segoe UI" size="22.0" />
                     </font>
                  </PasswordField>
                  <PasswordField prefHeight="48.0" prefWidth="267.0" promptText="Confirm Password" styleClass="input-field" stylesheets="@../../stylish/style.css">
                     <font>
                        <Font name="Segoe UI" size="22.0" />
                     </font>
                  </PasswordField>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="20.0" top="-10.0" />
               </padding>
            </VBox>
            <Button fx:id="login_btn" alignment="CENTER" mnemonicParsing="false" onAction="#onLogin" prefHeight="40.0" prefWidth="170.0" styleClass="submit-btn" stylesheets="@../../stylish/style.css" text="Sign up" textAlignment="CENTER" textFill="WHITE" VBox.vgrow="NEVER">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </center>
   <bottom>
      <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="54.0" prefWidth="195.0" styleClass="sign-up-link" text="Go back to Login" textFill="#096afc" underline="true" wrapText="true" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
